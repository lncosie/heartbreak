<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_color_ground"
    tools:context=".ActivityHeartBreakFragment">



    <LinearLayout
        android:padding="10dp"

        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/lock_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <include layout="@layout/fragment_message"></include>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
            android:padding="10dp"
            android:background="@null"
            android:src="@drawable/drawable_list_logs_states"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></ImageButton>
        <ImageButton
            android:padding="12dp"
            android:background="@null"
            android:src="@drawable/drawable_lock_states"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></ImageButton>

        <ImageButton
            android:padding="12dp"
            android:background="@null"
            android:src="@drawable/drawable_lock_states"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></ImageButton>
        <ImageButton
            android:id="@+id/share_key"
            android:padding="12dp"
            android:background="@null"
            android:src="@drawable/drawable_share_states"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></ImageButton>
    </LinearLayout>


    <Toolbar
        android:visibility="visible"
        android:id="@+id/toolbar_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
